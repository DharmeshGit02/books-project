<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Archive</title>
    <style>
        li>a:hover {
            background-color: #E3A60F !important;
        }
    </style>
</head>

<body class="bg-secondary">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container d-flex justify-content-between">
            <a class="navbar-brand" href="#">
                <h2 class="d-flex align-items-center text-warning gap-1">
                    <span>
                        <img src="/images/icon.png" alt="icon" width="40">
                    </span>
                    Archives
                    <span class="text-secondary h6">&copy;DNM</span>
                </h2>
            </a>
            <div class="d-flex gap-1">
                <div class="dropdown">
                    <button style="background-color: #f4c430;" class="btn dropdown-toggle" type="button"
                        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Genre
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1"
                        style="background-color:  #F4C430 ;">
                        <% genres.forEach((genre)=> { %>
                            <li><a class="dropdown-item" href="/filter?genre=<%= genre %>&page=0">
                                    <%= genre %>
                                </a></li>
                            <% }) %>
                    </ul>
                </div>
                <div class="dropdown">
                    <button style="background-color: #f4c430;" class="btn dropdown-toggle" type="button"
                        id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Author
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1"
                        style="background-color:  #F4C430 ;">
                        <% authors.forEach((author)=> { %>
                            <li><a class="dropdown-item" href="/filter?author=<%= author %>&page=0">
                                    <%= author %>
                                </a></li>
                            <% }) %>
                    </ul>
                </div>
                <button class="btn btn-warning">
                    <a href="/bookmarks" class="text-warning link">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="black"
                            class="bi bi-bookmark" viewBox="0 0 16 16">
                            <path
                                d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z" />
                        </svg>
                    </a>
                </button>
            </div>
        </div>
    </nav>
    <div class="container-fluid mt-2 d-flex flex-wrap justify-content-center gap-2">
        <% books.forEach((book)=> { %>
            <div class="card bg-dark" style="width: 20rem; color: whitesmoke;">
                <img src=<%=book.thumbnail%> class="card-img-top" alt="book-img" height="360" />
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title mb-3" style="color:  #E3A60F ;">
                            <%= book.book_title %>
                        </h5>
                        <div class="container">
                            <h6 style="color:   #F4C430   ;">Author: <%= book.name %>
                            </h6>
                            <h6 style="color:   #F4C430   ;">Genre: <%= book.genre %>
                            </h6>
                        </div>
                    </div>
                    <div class="container d-flex justify-content-between align-items-center mt-4">
                        <div class="d-flex">
                            <a href="#" class="btn btn-warning">Read</a>
                            <form action="/add-to-bookmarks" method="post">
                                <input type="hidden" name="book_id" value="<%= book.id %>">
                                <button class="btn text-warning">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                        class="bi bi-bookmark" viewBox="0 0 16 16">
                                        <path
                                            d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z" />
                                    </svg>
                                </button>
                            </form>
                        </div>

                        <div>
                            <% for(let i=1; i <=3; i++) { %>
                                <% if(i <=book.popularity) {%>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#E3A60F"
                                        class="bi bi-star-fill" viewBox="0 0 16 16">
                                        <path
                                            d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                    </svg>
                                    <% } else { %>
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="gray"
                                            class="bi bi-star-fill" viewBox="0 0 16 16">
                                            <path
                                                d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z" />
                                        </svg>
                                    <% } %>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>